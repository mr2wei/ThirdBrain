<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="panel">
                    <children>

                        <flow-layout direction="vertical">
                            <children>

                                <scroll direction="vertical">
                                    <flow-layout direction="vertical">
                                        <children>
                                                    <flow-layout direction="vertical" id="npcName">
                                                        <children>
                                                            <label id="npcName-label">
                                                                <shadow>true</shadow>
                                                            </label>
                                                        </children>
                                                    </flow-layout>

                                                    <flow-layout direction="vertical" id="conversationRange">
                                                        <children>
                                                            <label id="conversationRange-label">
                                                                <shadow>true</shadow>
                                                            </label>
                                                            <discrete-slider id="conversationRangeSlider" min="2" max="64">
                                                                <sizing>
                                                                    <horizontal method="fill">25</horizontal>
                                                                    <vertical method="fill">7</vertical>
                                                                </sizing>
                                                            </discrete-slider>
                                                        </children>
                                                    </flow-layout>

                                                    <flow-layout direction="horizontal">
                                                        <children>

                                                    <flow-layout direction="vertical">
                                                        <children>
                                                            <label id="llmType-label">
                                                                <shadow>true</shadow>
                                                            </label>
                                                            <dropdown id="llmType">
                                                                <sizing>
                                                                    <horizontal method="fill">24</horizontal>
                                                                </sizing>
                                                            </dropdown>
                                                        </children>
                                                    </flow-layout>

                                                    <flow-layout direction="vertical" id="llmModel">
                                                        <children>
                                                            <label id="llmModel-label">
                                                                <shadow>true</shadow>
                                                            </label>
                                                        </children>
                                                    </flow-layout>

                                                </children>
                                            </flow-layout>

                                            <flow-layout direction="vertical" id="llmInfo">
                                                <children>
                                                </children>
                                            </flow-layout>
                                        </children>

                                        <gap>8</gap>
                                    </flow-layout>

                                    <sizing>
                                        <vertical method="fixed">180</vertical>
                                    </sizing>
                                </scroll>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="cancel">
                                            <text>Cancel</text>
                                        </button>
                                        <button id="save">
                                            <text>Save</text>
                                        </button>
                                    </children>

                                    <gap>6</gap>
                                </flow-layout>

                            </children>

                            <margins>
                                <all>11</all>
                            </margins>

                            <gap>9</gap>

                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>

                        </flow-layout>

                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
